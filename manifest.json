{
  "manifest_version": 3,
  "name": "LexFlow â€” Legal Collector & AI",
  "version": "0.2.0",
  "description": "Review & summarize legal texts using Chrome built-in AI. Select jurisdiction, pick statutes (Markdown), craft prompts, get structured outputs. Capture snippets from the web into a curation queue and generate Markdown for a public repo.",
  "action": {
    "default_popup": "src/ui/app.html"
  },
  "background": {
    "service_worker": "src/sw.js",
    "type": "module"
  },
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "permissions": [
    "storage",
    "contextMenus",
    "scripting",
    "activeTab",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://api.github.com/*",
    "https://raw.githubusercontent.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content/cs.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/ui/*.html",
        "src/ui/*.js",
        "src/ui/styles.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}